{
  "manifest_version": 3,
  "name": "AI Chat Assistant",
  "version": "1.0.0",
  "description": "一个智能的AI聊天助手浏览器插件",
  "action": {
    "default_title": "AI Chat Assistant",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "runtime"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}